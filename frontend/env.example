# ==============================================================================
# Password Manager Frontend - Environment Configuration
# ==============================================================================
# Copy this file to:
#   - .env.development (for local development)
#   - .env.production (for production builds)
# ==============================================================================

# ==============================================================================
# BACKEND API CONFIGURATION
# ==============================================================================
# Development: http://localhost:8000
# Production: https://api.yourapp.com
VITE_API_BASE_URL=http://localhost:8000

# WebSocket URL (for real-time breach alerts)
# Development: ws://localhost:8001
# Production: wss://api.yourapp.com
VITE_WS_URL=ws://localhost:8001

# ==============================================================================
# BLOCKCHAIN CONFIGURATION (Phase 2B - Optional)
# ==============================================================================
# Enable blockchain anchoring features
VITE_BLOCKCHAIN_ENABLED=false

# Smart Contract Address (after deployment)
VITE_CONTRACT_ADDRESS=

# Blockchain Network (testnet or mainnet)
VITE_BLOCKCHAIN_NETWORK=testnet

# Block Explorer URLs
VITE_BLOCK_EXPLORER_TESTNET=https://sepolia.arbiscan.io
VITE_BLOCK_EXPLORER_MAINNET=https://arbiscan.io

# ==============================================================================
# FHE CONFIGURATION (Fully Homomorphic Encryption)
# ==============================================================================
# Enable FHE for encrypted password operations
VITE_FHE_ENABLED=true

# FHE Performance Tier (simulation, hybrid, native)
VITE_FHE_DEFAULT_TIER=hybrid

# ==============================================================================
# FIREBASE CONFIGURATION (Push Notifications)
# ==============================================================================
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# ==============================================================================
# OAUTH CONFIGURATION
# ==============================================================================
# OAuth credentials are managed on the backend
# Frontend only needs these for display purposes
VITE_GOOGLE_OAUTH_CLIENT_ID=
VITE_GITHUB_OAUTH_CLIENT_ID=
VITE_APPLE_OAUTH_CLIENT_ID=

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Environment (development, staging, production)
VITE_APP_ENV=development

# Debug mode (shows detailed errors, logs in console)
VITE_DEBUG=true

# Enable Analytics (Google Analytics, Mixpanel, etc.)
VITE_ENABLE_ANALYTICS=false

# Enable Error Tracking (Sentry)
VITE_ENABLE_ERROR_TRACKING=false

# Enable Biometric Authentication
VITE_ENABLE_BIOMETRICS=true

# Enable Behavioral Recovery
VITE_ENABLE_BEHAVIORAL_RECOVERY=true

# Enable Social Mesh Recovery
VITE_ENABLE_SOCIAL_MESH=true

# Enable Passkey/WebAuthn
VITE_ENABLE_PASSKEYS=true

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================
# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# WebSocket Reconnection Settings
VITE_WS_RECONNECT_DELAY=3000
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# Password Strength Check Debounce (milliseconds)
VITE_PASSWORD_CHECK_DEBOUNCE=500

# ==============================================================================
# SENTRY (ERROR TRACKING - Production)
# ==============================================================================
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# ==============================================================================
# ANALYTICS
# ==============================================================================
# Google Analytics
VITE_GA_TRACKING_ID=

# Mixpanel
VITE_MIXPANEL_TOKEN=

# ==============================================================================
# DEPLOYMENT CONFIGURATION
# ==============================================================================
# Build Version (auto-populated by CI/CD)
VITE_APP_VERSION=1.0.0

# Build Timestamp
VITE_BUILD_TIMESTAMP=

# Git Commit Hash
VITE_COMMIT_HASH=

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================
# Content Security Policy Report URI
VITE_CSP_REPORT_URI=

# Enable strict CSP (may break some third-party integrations)
VITE_STRICT_CSP=false
