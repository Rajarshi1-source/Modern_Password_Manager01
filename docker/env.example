# =============================================================================
# Docker Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# =============================================================================

# =============================================================================
# Django Settings
# =============================================================================
# IMPORTANT: Set DEBUG=True for local development to:
#   - Disable HTTPS/SSL redirects (prevents redirect loops)
#   - Enable lenient rate limiting (30 auth requests/min vs 3/min)
#   - Show detailed error messages
# Set DEBUG=False for production!
DEBUG=True

SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourapp.com,www.yourapp.com,api.yourapp.com

# =============================================================================
# Database Configuration
# =============================================================================
DB_NAME=password_manager
DB_USER=pm_user
DB_PASSWORD=your-secure-database-password-here
DB_HOST=postgres
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_CONCURRENCY=4

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_BASE_URL=https://api.yourapp.com
VITE_WS_URL=wss://api.yourapp.com
VITE_BLOCKCHAIN_ENABLED=false
VITE_CONTRACT_ADDRESS=

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com
CSRF_TRUSTED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# =============================================================================
# Gunicorn Configuration
# =============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# =============================================================================
# Twilio Configuration (Optional - for SMS)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_ENABLED=false

# =============================================================================
# Blockchain Configuration (Phase 2B)
# =============================================================================
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK=testnet
BLOCKCHAIN_PRIVATE_KEY=
COMMITMENT_REGISTRY_ADDRESS_TESTNET=
ARBITRUM_TESTNET_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc

# =============================================================================
# FHE (Fully Homomorphic Encryption) Configuration
# =============================================================================
# Enable/disable FHE operations
FHE_ENABLED=true

# Default encryption tier: client_only, hybrid, full_fhe
FHE_DEFAULT_TIER=hybrid

# Maximum latency for FHE operations in milliseconds
FHE_MAX_LATENCY_MS=1000

# Cache TTL for FHE computation results in seconds
FHE_CACHE_TTL=3600

# Frontend FHE configuration
VITE_FHE_ENABLED=true

# =============================================================================
# Django Admin Superuser (auto-created on first run)
# =============================================================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourapp.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password

