{
  "name": "password-manager-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Password Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "install-deps": "npm install",
    "rebuild": "electron-rebuild"
  },
  "keywords": [
    "password-manager",
    "electron",
    "desktop",
    "security"
  ],
  "author": "Password Manager Team",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "axios": "^1.5.0",
    "electron-updater": "^6.1.4"
  },
  "optionalDependencies": {
    "node-dpapi": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.passwordmanager.desktop",
    "productName": "Password Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-username",
        "repo": "password-manager"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "homepage": ".",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/password-manager.git"
  }
}
