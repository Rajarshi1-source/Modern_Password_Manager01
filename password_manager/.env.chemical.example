# Chemical Password Storage Environment Variables
# ================================================
# Copy this file to your .env and configure as needed

# =============================================================================
# Mode Configuration
# =============================================================================

# Synthesis mode: 'mock' (demo, 95% of users) or 'real' (enterprise)
DNA_SYNTHESIS_MODE=mock

# Lab provider (used when DNA_SYNTHESIS_MODE=real)
LAB_PROVIDER=twist

# =============================================================================
# Lab Provider API Keys (Enterprise only)
# =============================================================================

# Twist Bioscience - Industry standard DNA synthesis
# https://www.twistbioscience.com/
TWIST_API_KEY=
TWIST_API_SECRET=

# IDT (Integrated DNA Technologies) - Alternative provider
# https://www.idtdna.com/
IDT_API_KEY=

# GenScript - Budget DNA synthesis option
# https://www.genscript.com/
GENSCRIPT_API_KEY=

# Illumina - DNA sequencing for password retrieval
# https://www.illumina.com/
ILLUMINA_API_KEY=

# =============================================================================
# Time-Lock Configuration
# =============================================================================

# RSA modulus size for client-side puzzles
TIMELOCK_MODULUS_BITS=2048

# Estimated iterations per second (adjust based on target device)
TIMELOCK_ITERATIONS_PER_SECOND=100000

# Master key for encrypting server-side capsule keys (generate securely!)
# python -c "import secrets; print(secrets.token_hex(32))"
TIMELOCK_MASTER_KEY=

# =============================================================================
# Certificate Configuration
# =============================================================================

# Secret key for signing certificates (generate securely!)
# python -c "import secrets; print(secrets.token_hex(32))"
CHEMICAL_CERT_SECRET=

# =============================================================================
# Feature Flags
# =============================================================================

# Enable chemical storage feature globally
CHEMICAL_STORAGE_ENABLED=true

# Error correction level for DNA encoding: low, medium, high
DNA_ERROR_CORRECTION_LEVEL=high

# =============================================================================
# Subscription Tiers (configured in code, documented here)
# =============================================================================
#
# FREE tier:
#   - Demo mode (mock synthesis)
#   - 1 password limit
#   - DNA encoding, time-lock, QR export, certificates
#   - No real synthesis
#
