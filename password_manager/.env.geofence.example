# =============================================================================
# Geofencing & Impossible Travel Detection Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# Amadeus API (Flight Verification - Primary Provider)
# Register at: https://developers.amadeus.com/
# -----------------------------------------------------------------------------
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret
AMADEUS_ENVIRONMENT=test  # 'test' or 'production'

# -----------------------------------------------------------------------------
# Sabre API (Flight Verification - Fallback Provider)
# Register at: https://developer.sabre.com/
# -----------------------------------------------------------------------------
SABRE_API_KEY=
SABRE_API_SECRET=
SABRE_REST_URL=https://api.cert.sabre.com

# -----------------------------------------------------------------------------
# GeoIP Database (MaxMind GeoLite2)
# Download from: https://dev.maxmind.com/geoip/geolite2-free-geolocation-data
# -----------------------------------------------------------------------------
GEOIP_PATH=./geoip
GEOIP_CITY_DB=GeoLite2-City.mmdb
GEOIP_COUNTRY_DB=GeoLite2-Country.mmdb

# -----------------------------------------------------------------------------
# Speed Thresholds (km/h) - Override defaults if needed
# -----------------------------------------------------------------------------
# TRAVEL_SPEED_WALKING=6        # Max walking speed
# TRAVEL_SPEED_CYCLING=40       # Max cycling speed
# TRAVEL_SPEED_DRIVING=200      # Max driving/ground transport
# TRAVEL_SPEED_RAIL=400         # Max high-speed rail
# TRAVEL_SPEED_FLIGHT=920       # Max commercial flight (~Mach 0.85)
# TRAVEL_SPEED_SUPERSONIC=1200  # Threshold for "impossible"

# -----------------------------------------------------------------------------
# NTP Time Synchronization
# -----------------------------------------------------------------------------
# NTP_SERVER=pool.ntp.org
# NTP_TIMEOUT=5

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
GEOFENCE_ENABLED=True
IMPOSSIBLE_TRAVEL_ENABLED=True
AIRLINE_VERIFICATION_ENABLED=True
CLONED_SESSION_DETECTION_ENABLED=True

# -----------------------------------------------------------------------------
# Data Retention (days)
# -----------------------------------------------------------------------------
# LOCATION_HISTORY_RETENTION_DAYS=90
# TRAVEL_EVENT_RETENTION_DAYS=365
